<div class="modal fade" id="modalLRForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog cascading-modal" role="document">
        <div class="modal-content">
            <div class="modal-c-tabs">
                <ul class="nav nav-tabs tabs-2 light-blue darken-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#panel7" role="tab"><i class="fa fa-user mr-1"></i> Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#panel8" role="tab"><i class="fa fa-user-plus mr-1"></i> Register</a>
                    </li>
                </ul>

                {# Login modal #}
                <div class="tab-content">
                    <div class="tab-pane fade in show active" id="panel7" role="tabpanel">
                        <div class="modal-body mb-1">
                          <form id="loginForm">
                            <div class="md-form form-sm">
                                <i class="fa fa-envelope prefix"></i>
                                <input type="text" id="loginEmail" class="form-control" required>
                                <label for="loginEmail">Your email</label>
                            </div>
                            <div class="md-form form-sm">
                                <i class="fa fa-lock prefix"></i>
                                <input type="password" id="loginPassword" class="form-control" required>
                                <label for="loginPassword">Your password</label>
                            </div>
                            <div class="text-center mt-2">
                                <button type="submit" class="btn btn-info" id="loginBtn">Log in <i class="fa fa-sign-in ml-1"></i></button>
                                <br />
                                <button type ="button" class="btn btn-primary btn-google" id="loginGoogle"><i class="fa fa-google"></i>&nbsp; &nbsp;Log in With Google</button>
                            </div>
                          </form>
                        </div>
                        <div class="modal-footer display-footer">
                            <div class="options text-center text-md-right mt-1">
                                <p>Not a member? <a href="#" class="blue-text">Sign Up</a></p>
                                {# <p>Forgot <a href="#" class="blue-text">Password?</a></p> #}
                            </div>
                            <button type="button" class="btn btn-outline-info waves-effect ml-auto" data-dismiss="modal">Close <i class="fa fa-times-circle ml-1"></i></button>
                        </div>
                    </div>

                    {# Registration Modal #}
                    <div class="tab-pane fade" id="panel8" role="tabpanel">
                      <form id = "userRegistration">
                        <div class="modal-body">
                            <div class="md-form form-sm">
                                <i class="fa fa-envelope prefix"></i>
                                <input type="text" id="regEmail" class="form-control" required>
                                <label for="regEmail">Your email</label>
                            </div>
                            <div class="md-form form-sm">
                                <i class="fa fa-lock prefix"></i>
                                <input type="password" id="regPassword" class="form-control" required>
                                <label for="form25">Your password</label>
                            </div>
                            <div class="md-form form-sm">
                                <i class="fa fa-lock prefix"></i>
                                <input type="password" id="regPasswordRepeat" class="form-control" required>
                                <label for="regPasswordRepeat">Repeat password</label>
                            </div>
                            <div class="text-center form-sm mt-2">
                                <button class="btn btn-info" type="submit" id="signUp">Sign up <i class="fa fa-sign-in ml-1"></i></button>
                            </div>
                        </div>
                      </form>
                        <div class="modal-footer">
                            <div class="options text-right">
                                <p class="pt-1">Already have an account? <a href="#" class="blue-text">Log In</a></p>
                            </div>
                            <button type="button" class="btn btn-outline-info waves-effect ml-auto" data-dismiss="modal">Close <i class="fa fa-times-circle ml-1"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalRRForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog cascading-modal" role="document">
        <div class="modal-content">
            <div class="modal-c-tabs">
                <ul class="nav nav-tabs tabs-2 light-blue darken-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#panel9" role="tab"><i class="fa fa-map mr-1"></i> State</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#panel10" role="tab"><i class="fa fa-drivers-license mr-1"></i> Plate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#panel11" role="tab"><i class="fa fa-automobile mr-1"></i> Model</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade in show active" id="panel9" role="tabpanel">
                        <div class="modal-body mb-1">
                          <i class="fa fa-map-marker prefix"></i>
                          <div class="md-form form-sm">
                            <select name="state" id="searchState" class="form-control" required>
                              <option value=""> ---States --- </option>
                              {% include "./states.njk" %}

                            </select>
                            </div>
                            <div class="text-center mt-2">
                                <button class="btn btn-info" id ="searchStateBtn">Search <i class="fa fa-search ml-1"></i></button>
                            </div>
                        </div>
                        <div class="modal-footer display-footer">
                            <button type="button" class="btn btn-outline-info waves-effect ml-auto" data-dismiss="modal">Close <i class="fa fa-times-circle ml-1"></i></button>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="panel10" role="tabpanel">
                        <div class="modal-body">
                          <i class="fa fa-drivers-license prefix"></i>
                            <div class="md-form form-sm">
                                <input type="text" id="lic_plate_search" class="form-control" required/>
                                <label for="form19">License Plate</label>
                            </div>
                            <div class="text-center mt-2">
                                <button class="btn btn-info" id="searchPlateBtn">Search <i class="fa fa-search ml-1"></i></button>
                            </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-info waves-effect ml-auto" data-dismiss="modal">Close <i class="fa fa-times-circle ml-1"></i></button>
                        </div>
                    </div>
                  </div>
                  <div class="tab-pane fade" id="panel11" role="tabpanel">
                      <div class="modal-body">
                        <i class="fa fa-car prefix"></i>
                        <div class="md-form form-sm">
                          <select name="Make" id="makeSearch" class="form-control" required>
                            <option value=""> ---Make --- </option>
                            {% include "./carmakes.njk" %}
                          </select>
                        </div>
                        <i class="fa fa-search-plus prefix"></i>
                        <div class="md-form form-sm">
                          <select name="Model" id="modelSearch" class="form-control" required>
                            <option value=""> ---Model --- </option>
                            {% include "./carmodels.njk" %}
                          </select>
                        </div>
                        <div class="text-center mt-2">
                            <button class="btn btn-info" id="searchModelBtn">Search <i class="fa fa-search ml-1"></i></button>
                        </div>
                      <div class="modal-footer">
                          <button type="button" class="btn btn-outline-info waves-effect ml-auto" data-dismiss="modal">Close <i class="fa fa-times-circle ml-1"></i></button>
                      </div>
                  </div>
              </div>
        </div>
    </div>
</div>
{% endblock %}
